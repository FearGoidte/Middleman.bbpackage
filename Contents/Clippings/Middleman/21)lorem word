Link (inline)
<%= link_to 'click me', '/dashboard', :class => 'linky' %>

Link (block)
<% link_to 'http://mysite.com' do %>
  <%= image_tag 'mylogo.png' %>
<% end %>

Arbitrary element (inline)
<%= tag :img, :src => "/my_image.png" %>

Arbitrary element block
<% content_tag :p, :class => "stuff" do %>
  Hello
<% end %>


escape_html('<hello>&<goodbye>')

simple_format("hello\nworld")

pluralize(2, 'person')

word_wrap('Once upon a time', :line_width => 8)

truncate("Once upon a time in a world far far away", :length => 8)

truncate_words("Once upon a time in a world far far away", :length => 4)

highlight('Lorem dolor sit', 'dolor')

#INLINE#lorem.words <#integer#>       # returns 5 individual words
#INLINE#lorem.word
#BLOCK#lorem.paragraphs 10 # returns 10 paragraphs
#BLOCK#lorem.paragraph
#INLINE#lorem.date('%A, %e %B %Y')          # accepts a strftime format argument
#INLINE#lorem.name
#INLINE#lorem.first_name
#INLINE#lorem.last_name


